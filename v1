    <script>
        lucide.createIcons();

        const calculateBtn = document.getElementById('calculateBtn');
        const hourlyRateEl = document.getElementById('hourlyRate');
        const staffCountEl = document.getElementById('staffCount');
        const resultsEl = document.getElementById('results');
        const initialMessageEl = document.getElementById('initial-message');

        const hourlySavingsEl = document.getElementById('hourlySavings');
        const monthlySavingsEl = document.getElementById('monthlySavings');
        const yearlySavingsEl = document.getElementById('yearlySavings');

        function calculateROI() {
            const hourlyRate = parseFloat(hourlyRateEl.value) || 0;
            const staffCount = parseInt(staffCountEl.value) || 0;
            
            if (hourlyRate > 0 && staffCount > 0) {
                const loadedHourlyRate = hourlyRate * 1.30;
                const totalHourlyCost = loadedHourlyRate * staffCount;
                const hourlySavings = totalHourlyCost * 0.30;
                const monthlySavings = hourlySavings * (40 * 4.33); 
                const yearlySavings = hourlySavings * 2080;

                const currency = (num) => new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(num);

                hourlySavingsEl.textContent = currency(hourlySavings);
                monthlySavingsEl.textContent = currency(monthlySavings);
                yearlySavingsEl.textContent = currency(yearlySavings);

                initialMessageEl.classList.add('hidden');
                resultsEl.classList.remove('opacity-0');
            }
        }

        calculateBtn.addEventListener('click', calculateROI);
        document.addEventListener('DOMContentLoaded', calculateROI);
    </script>
